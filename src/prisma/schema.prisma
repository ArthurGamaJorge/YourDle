generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Conexo {
  idConexo   Int      @id(map: "PK__Conexo__C427651C5792FE99") @default(autoincrement())
  verde      String   @db.VarChar(500)
  azul       String   @db.VarChar(500)
  amarelo    String   @db.VarChar(500)
  vermelho   String   @db.VarChar(500)
  dataCriado DateTime @db.Date
  curtida    Int
  descurtida Int
  idUsuario  Int
  Usuario    Usuario  @relation(fields: [idUsuario], references: [idUsuario], onUpdate: NoAction, map: "fk_UsuarioConexo")
}

model Usuario {
  idUsuario Int      @id(map: "PK__Usuario__645723A62A23F111") @default(autoincrement())
  username  String   @db.VarChar(80)
  senha     String   @db.VarChar(50)
  Conexo    Conexo[]
  Wordle    Wordle[]
}

model Wordle {
  idWordle   Int      @id(map: "PK__Wordle__A82300F47E274A24") @default(autoincrement())
  palavra    String   @db.VarChar(5)
  dataCriado DateTime @db.Date
  curtida    Int
  descurtida Int
  idUsuario  Int
  Usuario    Usuario  @relation(fields: [idUsuario], references: [idUsuario], onUpdate: NoAction, map: "fk_UsuarioWordle")
}
